{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "esnext.asynciterable",
    ],
    "typeRoots": ["node_modules/@types","types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "paths": {
    }
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
      "files": true
    },
    "files": [
      "index.ts",
      "types/global.d.ts",
      "types/utils.d.ts",
      "types/express-types.d.ts",
    ],
}